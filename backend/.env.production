# ==========================================
# Application Configuration
# ==========================================
NODE_ENV=production
PORT=5000
CLIENT_URL=https://your-frontend-domain.com

# ==========================================
# Database Configuration
# ==========================================
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/marketplace?retryWrites=true&w=majority

# ==========================================
# Authentication & Security
# ==========================================
JWT_SECRET=your-production-super-secure-jwt-secret-key
JWT_REFRESH_SECRET=your-production-super-secure-refresh-secret-key
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# ==========================================
# Cloudinary Configuration
# ==========================================
CLOUDINARY_CLOUD_NAME=your-production-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-production-cloudinary-api-key
CLOUDINARY_API_SECRET=your-production-cloudinary-api-secret

# ==========================================
# Stripe Configuration
# ==========================================
STRIPE_PUBLISHABLE_KEY=pk_live_your-stripe-publishable-key
STRIPE_SECRET_KEY=sk_live_your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=whsec_your-production-stripe-webhook-secret

# ==========================================
# Email Configuration
# ==========================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-production-email@gmail.com
EMAIL_PASS=your-production-app-password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=Marketplace

# ==========================================
# File Upload Limits
# ==========================================
MAX_FILE_SIZE=5242880
MAX_FILES=5

# ==========================================
# Rate Limiting
# ==========================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==========================================
# CORS Configuration
# ==========================================
ALLOWED_ORIGINS=https://your-frontend-domain.com

# ==========================================
# Socket.IO Configuration
# ==========================================
SOCKET_CORS_ORIGIN=https://your-frontend-domain.com